<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checklocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/gpscheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check GPS"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/gpscheck2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Your location is not loaded yet,check your gps signal strength and try again later."
        android:textColor="#000000"/>

    <Button
        android:id="@+id/okay"
        style="@style/Theme.AppCompat.DayNight.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80772B"
        android:text="Close App."
        android:textColor="#FFFFFF"/>
</LinearLayout>