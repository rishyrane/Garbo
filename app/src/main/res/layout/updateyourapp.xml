<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updateyourapp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="40dp">

    <TextView
        android:id="@+id/Confirmation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update the App"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/sure2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="The current version of the app is unsupported. Update the app Now!"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/confirm2"
        style="@style/Theme.AppCompat.DayNight.Dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80772B"
        android:text="CONFIRM"
        android:textColor="#FFFFFF"/>
</LinearLayout>